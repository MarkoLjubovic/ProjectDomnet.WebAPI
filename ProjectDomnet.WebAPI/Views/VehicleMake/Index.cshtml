@using ProjectDomnet.Models
@model IEnumerable<VehicleMake>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">VehicleMake List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="VehicleMake" asp-action="Create" class="btn btn-primary">
                Create New VehicleMake
            </a>
        </div>
    </div>
    <br/><br/>

<table class="table table-border table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Make Abrv
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.MakeAbrv
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="VehicleMake" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="VehicleMake" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>>